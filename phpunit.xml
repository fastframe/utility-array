<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="tests/bootstrap.php"
>
	<testsuites>
		<testsuite name="FastFrame Utility Array Unit Tests">
			<directory>./tests/src/</directory>
		</testsuite>
	</testsuites>
	<filter>
		<whitelist>
			<directory>./src/</directory>
		</whitelist>
	</filter>
	<logging>
		<log type="coverage-html" target="tmp/coverage" title="http_build_url()"
		     charset="UTF-8" yui="true" highlight="true"
		     lowUpperBound="35" highLowerBound="70"/>
		<!--<log type="coverage-clover" target="tmp/logs/clover.xml"/>-->
		<log type="junit" target="tmp/logs/junit.xml"
		     logIncompleteSkipped="false"/>
	</logging>
</phpunit>